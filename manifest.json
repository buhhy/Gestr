{
  "manifest_version": 2,

  "name": "Gesture",
  "description": "Cool stuff",
  "version": "0.1",

  "permissions": [
    "tabs"
  ],

  "browser_action": {
    "default_icon": "testicon.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "logic/constants.js",
        "logic/math.js",
        "logic/gesture.js",

        "ui/canvas.js",
        "ui/gesture-controller.js",

        "content-script.js"
      ],
      "css": [
        "content-style.css"
      ],
      "run_at": "document_end"
    }
  ]
}